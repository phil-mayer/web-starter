{
    "name": "web-starter",
    "version": "1.0.0",
    "description": "Boilerplate repository for simple single-page sites including Parcel bundling, SCSS, and PostCSS auto-prefixing",
    "main": "src/index.pug",
    "repository": "https://github.com/phil-mayer/web-starter.git",
    "author": "Phil Mayer <phil.mayer93@gmail.com>",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "clean": "rm -rf .cache dist",
        "build": "yarn clean && parcel build ./src/index.pug --public-url ./",
        "run:dev": "parcel ./src/index.pug --open --port 5000",
        "lint:commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
        "format:source": "pretty-quick --staged"
    },
    "dependencies": {
        "@babel/plugin-syntax-async-generators": "^7.2.0",
        "autoprefixer": "^9.7.6",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-runtime": "^6.26.0",
        "husky": "^4.2.5",
        "node-sass": "^4.12.0",
        "parcel-bundler": "^1.12.3",
        "postcss-modules": "^2.0.0",
        "prettier": "^2.0.4",
        "pretty-quick": "^2.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "eslint-plugin-jsdoc": "^26.0.1",
        "parcel-plugin-eslint": "^1.0.7",
        "pug": "^2.0.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "yarn lint:commit-msg",
            "pre-commit": "yarn format:source"
        }
    }
}
